/*2. Write a function to reverse a string.*/

#include<stdio.h>
void rev(char *str,int n);
int main()
{
char str[20];
int length=-1;
printf("Enter the string :");
fgets(str,20,stdin);
//To find the length of the string
for(int i=0;str[i];i++){
   length++;
}
rev(str,length);
printf("Your string after reversing is %s",&str[0]);

return 0;
}
void rev(char *str,int n){
   char temp;
   for(int i=0;i<n/2;i++){
      temp=str[i];
      str[i]=str[n-1-i];
      str[n-1-i]=temp;

   }
   
}
