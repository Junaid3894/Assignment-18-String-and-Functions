/*4. Write a function to transform string into lowercase*/

#include<stdio.h>
char str_low(char *str);
int main()
{
char str[20];
printf("Enter the string :");
fgets(str,20,stdin);
str_low(str);
printf("Your String after lower case :%s",str);
return 0;
}
char str_low(char *str){
   for(int i=0;str[i];i++){
      if(str[i]>='A' && str[i]<='Z')
         str[i]=str[i]+32;
   }
   
}
