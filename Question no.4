/*4. Write a function to transform string into uppercase*/

#include<stdio.h>
char str_upr(char *str);
int main()
{
char str[20];
int n=-1;
printf("Enter the string :");
fgets(str,20,stdin);
str_upr(str);
printf("Your String after uppercase :%s",str);
return 0;
}
char str_upr(char *str){
   for(int i=0;str[i];i++){
      if(str[i]>='a' && str[i]<='z')
         str[i]=str[i]-32;
   }
   
}
